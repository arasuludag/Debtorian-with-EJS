<%- include('header'); -%>

<section class = "Squezer">
  <div class="row">
 <div class="col-lg-4 col-12 smoothbackground spendinginputbackground">
   <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <h1>Register.</h1> <br>
              <label for="text">Name</label> <br>
              <input type="text" class="login-input form-control" name="name">
            </div>
            <div class="form-group">
              <label for="email">Email</label> <br>
              <input type="email" class="login-input form-control" name="email">
            </div>
            <div class="form-group">
              <label for="password">Password</label> <br>
              <input type="password" class="login-input form-control" name="password">
            </div>
            <h6>You can choose any name you want but be sure that it will be unique from your friends. Otherwise this'll be pretty awkward.</h6>
            <br>
            <button type="submit" class="btn btn-dark btn-lg">Register</button>
          </form>
 </div>
</section>

<%- include('footer'); -%>
