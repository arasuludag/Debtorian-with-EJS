<%- include('header'); -%>

<section class="Squezer">


  <div class="row">
    <div class="col-lg-5 col-12 smoothbackground spendinginputbackground">
      <h1>Hello, <%= userName %>!</h1>
      <h2>This is the spending list of <%= house.name %>.</h2>
      <br>
      <h3>You spent $<%= usersTotalSpending %> in total.</h3>
      <% if(isHighestPerson !== true){  %>
      <h3>You have to spend $<%= userDebt %> more to reach <%= higestSummedPerson %>.</h3>
      <% } else {  %>
      <h3>Stop spending. Wait others to reach you.</h3>
      <% }; %>
            <br>
      <form action="/money-page" method="POST" class="form-inline">
        <h3>I spent $</h3>
        <input type="text" class="form-control" placeholder="Ex: 30" name="amount" style="width: 76px; margin: auto 5px;">
        <h3> on </h3>
        <input type="text" class="form-control" placeholder="Ex: Electric Bill" name="info" style="width: 170px; margin: auto 5px;">
        <button type="Submit" name="Submit" value="Submitted" class="btn btn-light btn-lg" style="margin-left: 10px;">+</button>
      </form>
      <br> <br>
      <h6>To add a people to <%= house.name %>, give them this code: <%= budgetId %></h6>
      <br>
      <form action="/money-page" method="POST" class="form-inline">
        <button type="Submit" name="Submit" value="Logout" class="btn btn-light btn-lg" style="margin-top: 20px;">Log out</button>
        </form>
    </div>
    <div class="col-lg-6 col-12 smoothbackground">

      <form action="/money-page" method="POST" class="form-inline">

        <ul class="list-group list-group-flush">
          <% if(transes !== undefined){ transes.forEach(function(trans, index){ %>
          <% if(trans.crossedOut == true) {%>
          <strike>
            <% } %>
            <li class="list-group-item"> <%= trans.who %> spent $<%= trans.amount %> on <%= trans.info %>
              <button type="Submit" class="btn btn-warning align-right-button" name="Submit" value="<%=trans._id%>">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                  <path fill-rule="evenodd"
                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z">
                  </path>
                </svg>
              </button>
            </li>
            <% if(trans.crossedOut == true) { %>
          </strike>
          <% } %>
          <% })}; %>
        </ul>
      </form>
    </div>
  </div>

</section>

<%- include('footer'); -%>
