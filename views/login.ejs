<%- include('header'); -%>

<section class = "Squezer">
  <div class="row">
 <div class="col-lg-4 col-12 smoothbackground spendinginputbackground">
   <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <h1>Log in.</h1>
            <br>
            <div class="form-group">
              <label for="email">Email</label> <br>
              <input type="email" class="login-input form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label> <br>
              <input type="password" class="login-input form-control" name="password">
            </div>
            <br>
            <button type="submit" class="btn btn-dark btn-lg">Login</button>
          </form>
 </div>
</section>

